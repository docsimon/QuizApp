<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/MainTitleTextStyle"
            android:layout_marginBottom="16dp"
            android:text="The Chess Quiz App"
            android:textColor="#757575" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chess1" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/name_placeholder"
            android:inputType="textCapWords" />

        <TextView
            style="@style/NoticeStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/notice"
            android:textColor="#757575" />

        <!-- Question 1 -->
        <TextView
            style="@style/QuestionStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/question_1"/>

        <CheckBox
            android:id="@+id/answer_1_1"
            style="@style/AnswerStyle"
            android:text="@string/answer_1_1" />

        <CheckBox
            android:id="@+id/answer_1_2"
            style="@style/AnswerStyle"
            android:text="@string/answer_1_2" />

        <CheckBox
            android:id="@+id/answer_1_3"
            style="@style/AnswerStyle"
            android:text="@string/answer_1_3" />

        <View
            style="@style/BarStyle"/>

        <!-- Question 2 -->
        <TextView
            style="@style/QuestionStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/question_2"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_ans_2_1"
                style="@style/AnswerStyle"
                android:text="@string/answer_2_1" />
            <RadioButton android:id="@+id/radio_ans_2_3"
                style="@style/AnswerStyle"
                android:text="@string/answer_2_3" />
            <RadioButton android:id="@+id/radio_ans_2_2"
            style="@style/AnswerStyle"
            android:text="@string/answer_2_2" />
        </RadioGroup>

        <View
            style="@style/BarStyle"/>

        <!-- Question 3 -->
        <TextView
            style="@style/QuestionStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/question_3"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_ans_3_1"
                style="@style/AnswerStyle"
                android:text="@string/answer_3_1" />
            <RadioButton android:id="@+id/radio_ans_3_2"
                style="@style/AnswerStyle"
                android:text="@string/answer_3_2" />
            <RadioButton android:id="@+id/radio_ans_3_3"
                style="@style/AnswerStyle"
                android:text="@string/answer_3_3" />
        </RadioGroup>

        <View
            style="@style/BarStyle"/>

        <!-- Question 4 -->
        <TextView
            style="@style/QuestionStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/question_4"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_ans_4_1"
                style="@style/AnswerStyle"
                android:text="@string/answer_4_1" />
            <RadioButton android:id="@+id/radio_ans_4_2"
                style="@style/AnswerStyle"
                android:text="@string/answer_4_2" />
            <RadioButton android:id="@+id/radio_ans_4_3"
                style="@style/AnswerStyle"
                android:text="@string/answer_4_3" />
        </RadioGroup>

        <View
            style="@style/BarStyle"/>

        <!-- Question 5 -->
        <TextView
            style="@style/QuestionStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/question_5"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_ans_5_1"
                style="@style/AnswerStyle"
                android:text="@string/answer_5_1" />
            <RadioButton android:id="@+id/radio_ans_5_2"
                style="@style/AnswerStyle"
                android:text="@string/answer_5_2" />
            <RadioButton android:id="@+id/radio_ans_5_3"
                style="@style/AnswerStyle"
                android:text="@string/answer_5_3" />
        </RadioGroup>

        <View
            style="@style/BarStyle"/>

        <Button
            style="@style/ButtonQuizStyle"
            android:id="@+id/button_sumbit"
            android:onClick="submitQuiz"
            android:text="@string/button_quiz" />
    </LinearLayout>

</ScrollView>